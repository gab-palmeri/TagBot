{
   "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext"],

      "module": "ESNext",
      "moduleResolution": "bundler",

      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,

      "baseUrl": "./src",
      "paths": {
         "@db/*": ["db/*"],
         "@utils/*": ["utils/*"],
         "@menu/*": ["utils/menu/*"],
         "@messages/*": ["utils/messages/*"]
      }
   },
   "exclude": ["node_modules", "dist"]
}
