{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
         "@db/*": ["db/*"],
         "@dto/*": ["dto/*"],
         "@composer/*": ["layers/composer/*"],
         "@service/*": ["layers/service/*"],
         "@repository/*": ["layers/repository/*"],
         "@utils/*": ["utils/*"],
         "@menu/*": ["utils/menu/*"],
         "@messages/*": ["utils/messages/*"]
      }
   },
   "exclude": [
	  "node_modules",
	  "dist"
   ],
}